<MyGrid>:

    name_ref: name_id
    email_ref: email_id

    GridLayout:
        cols: 1
        size: root.width - 200, root.height - 200
        pos: 100, 100

        GridLayout:
            cols: 2

            Label:
                text: "Name: "

            TextInput:
                id: name_id
                multiline: False

            Label
                text: "Email: "

            TextInput:
                id: email_id
                multiline: False

        Button:
            text: "Submit"
            on_press: root.btn()